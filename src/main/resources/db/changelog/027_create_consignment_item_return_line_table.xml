<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
      http://www.liquibase.org/xml/ns/dbchangelog
      https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="027_create_consignment_item_return_line_table" author="mrojek">

        <createTable tableName="consignment_item_return_line">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"
                             primaryKeyName="pk_consignment_item_return_line"/>
            </column>

            <column name="consignment_item_return_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="item_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="lot_id" type="BIGINT"/>

            <column name="qty" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="check_status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <column name="checked_by_id" type="BIGINT"/>

            <column name="checked_at" type="TIMESTAMP"/>

            <column name="comment" type="VARCHAR(500)"/>

        </createTable>

        <addForeignKeyConstraint
                baseTableName="consignment_item_return_line" baseColumnNames="consignment_item_return_id"
                referencedTableName="consignment_item_return" referencedColumnNames="id"
                constraintName="fk_cirl_return"/>

        <addForeignKeyConstraint
                baseTableName="consignment_item_return_line" baseColumnNames="item_id"
                referencedTableName="item" referencedColumnNames="id"
                constraintName="fk_cirl_item"/>

        <addForeignKeyConstraint
                baseTableName="consignment_item_return_line" baseColumnNames="lot_id"
                referencedTableName="lot" referencedColumnNames="id"
                constraintName="fk_cirl_lot"/>

        <addForeignKeyConstraint
                baseTableName="consignment_item_return_line" baseColumnNames="checked_by_id"
                referencedTableName="users" referencedColumnNames="id"
                constraintName="fk_cirl_checked_by"/>

        <createIndex indexName="ix_cirl_return" tableName="consignment_item_return_line">
            <column name="consignment_item_return_id"/>
        </createIndex>

        <createIndex indexName="ix_cirl_item" tableName="consignment_item_return_line">
            <column name="item_id"/>
        </createIndex>

        <createIndex indexName="ix_cirl_lot" tableName="consignment_item_return_line">
            <column name="lot_id"/>
        </createIndex>

        <createIndex indexName="ix_cirl_check_status" tableName="consignment_item_return_line">
            <column name="check_status"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>
