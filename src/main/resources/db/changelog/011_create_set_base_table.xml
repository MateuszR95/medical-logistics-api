<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet id="011_create_set_base_table" author="mrojek">
        <createTable tableName="set_base">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="catalog_number" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(160)">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint
                tableName="set_base"
                columnNames="catalog_number"
                constraintName="uq_set_base_catalog_number"/>
    </changeSet>

</databaseChangeLog>