<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
      http://www.liquibase.org/xml/ns/dbchangelog
      https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="033_create_shipment_table" author="mrojek">

        <createTable tableName="shipment">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_shipment"/>
            </column>

            <column name="shipment_number" type="VARCHAR(40)">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="VARCHAR(20)" defaultValue="CREATED">
                <constraints nullable="false"/>
            </column>

            <column name="ref_type" type="VARCHAR(40)" defaultValue="NONE">
                <constraints nullable="false"/>
            </column>

            <column name="ref_id" type="BIGINT"/>

            <column name="ship_from_warehouse_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="ship_to_address_id" type="BIGINT"/>

            <column name="planned_ship_date" type="DATE"/>

            <column name="shipped_at" type="TIMESTAMP"/>

            <column name="delivered_at" type="TIMESTAMP"/>

            <column name="carrier" type="VARCHAR(64)"/>

            <column name="tracking_number" type="VARCHAR(128)"/>

            <column name="created_by_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="voided_by_id" type="BIGINT"/>

            <column name="voided_at" type="TIMESTAMP"/>

            <column name="comment" type="VARCHAR(800)"/>

        </createTable>

        <addUniqueConstraint
                tableName="shipment"
                columnNames="shipment_number"
                constraintName="uq_shipment_number"/>

        <addForeignKeyConstraint
                baseTableName="shipment" baseColumnNames="ship_from_warehouse_id"
                referencedTableName="warehouse" referencedColumnNames="id"
                constraintName="fk_sh_ship_from_wh"/>

        <addForeignKeyConstraint
                baseTableName="shipment" baseColumnNames="ship_to_address_id"
                referencedTableName="address" referencedColumnNames="id"
                constraintName="fk_sh_ship_to_address"/>

        <addForeignKeyConstraint
                baseTableName="shipment" baseColumnNames="created_by_id"
                referencedTableName="users" referencedColumnNames="id"
                constraintName="fk_sh_created_by"/>

        <addForeignKeyConstraint
                baseTableName="shipment" baseColumnNames="voided_by_id"
                referencedTableName="users" referencedColumnNames="id"
                constraintName="fk_sh_voided_by"/>

        <createIndex indexName="ix_sh_status" tableName="shipment">
            <column name="status"/>
        </createIndex>

        <createIndex indexName="ix_sh_ref" tableName="shipment">
            <column name="ref_type"/>
            <column name="ref_id"/>
        </createIndex>

        <createIndex indexName="ix_sh_ship_from_wh" tableName="shipment">
            <column name="ship_from_warehouse_id"/>
        </createIndex>

        <createIndex indexName="ix_sh_planned_ship_date" tableName="shipment">
            <column name="planned_ship_date"/>
        </createIndex>

        <createIndex indexName="ix_sh_shipped_at" tableName="shipment">
            <column name="shipped_at"/>
        </createIndex>

        <createIndex indexName="ix_sh_carrier" tableName="shipment">
            <column name="carrier"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>
