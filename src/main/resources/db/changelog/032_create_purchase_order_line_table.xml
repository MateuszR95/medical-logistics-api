<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
      http://www.liquibase.org/xml/ns/dbchangelog
      https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="032_create_purchase_order_line_table" author="mrojek">

        <createTable tableName="purchase_order_line">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_purchase_order_line"/>
            </column>

            <column name="purchase_order_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="item_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="qty_total" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="qty_allocated" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="qty_shipped" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="qty_backorder" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="state" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>

            <column name="carrier" type="VARCHAR(64)"/>

            <column name="tracking_number" type="VARCHAR(128)"/>

            <column name="shipped_at" type="DATE"/>

        </createTable>

        <addForeignKeyConstraint
                baseTableName="purchase_order_line" baseColumnNames="purchase_order_id"
                referencedTableName="purchase_order" referencedColumnNames="id"
                constraintName="fk_po_line_po"/>

        <addForeignKeyConstraint
                baseTableName="purchase_order_line" baseColumnNames="item_id"
                referencedTableName="item" referencedColumnNames="id"
                constraintName="fk_po_line_item"/>

        <createIndex indexName="ix_po_line_item" tableName="purchase_order_line">
            <column name="item_id"/>
        </createIndex>

        <createIndex indexName="ix_po_line_state" tableName="purchase_order_line">
            <column name="state"/>
        </createIndex>

        <createIndex indexName="ix_po_line_shipped_at" tableName="purchase_order_line">
            <column name="shipped_at"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>
