<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
      http://www.liquibase.org/xml/ns/dbchangelog
      https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="019-create-loaner-request-decision-line" author="mrojek">
        <createTable tableName="loaner_request_decision_line">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_loaner_request_decision_line"/>
            </column>

            <column name="loaner_request_decision_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="set_base_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="approved_qty" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint
                tableName="loaner_request_decision_line"
                columnNames="loaner_request_decision_id,set_base_id"
                constraintName="uq_lrd_line_decision_setbase"/>

        <addForeignKeyConstraint
                baseTableName="loaner_request_decision_line" baseColumnNames="loaner_request_decision_id"
                referencedTableName="loaner_request_decision" referencedColumnNames="id"
                constraintName="fk_lrd_line_decision"/>

        <addForeignKeyConstraint
                baseTableName="loaner_request_decision_line" baseColumnNames="set_base_id"
                referencedTableName="set_base" referencedColumnNames="id"
                constraintName="fk_lrd_line_set_base"/>

        <createIndex indexName="ix_lrd_line_decision" tableName="loaner_request_decision_line">
            <column name="loaner_request_decision_id"/>
        </createIndex>

        <createIndex indexName="ix_lrd_line_setbase" tableName="loaner_request_decision_line">
            <column name="set_base_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
