<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
      http://www.liquibase.org/xml/ns/dbchangelog
      https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="025_create_consignment_item_request_line_table" author="mrojek">

        <createTable tableName="consignment_item_request_line">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_consignment_item_request_line"/>
            </column>

            <column name="consignment_item_request_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="item_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="requested_qty" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="allocated_qty" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="backordered_qty" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="shipped_qty" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="comment" type="VARCHAR(500)"/>

        </createTable>
        <addUniqueConstraint
                tableName="consignment_item_request_line"
                columnNames="consignment_item_request_id,item_id"
                constraintName="uq_cirl_request_item"/>
        <addForeignKeyConstraint
                baseTableName="consignment_item_request_line" baseColumnNames="consignment_item_request_id"
                referencedTableName="consignment_item_request" referencedColumnNames="id"
                constraintName="fk_cirl_request"/>

        <addForeignKeyConstraint
                baseTableName="consignment_item_request_line" baseColumnNames="item_id"
                referencedTableName="item" referencedColumnNames="id"
                constraintName="fk_cireql_item"/>
        <createIndex indexName="ix_cirl_request" tableName="consignment_item_request_line">
            <column name="consignment_item_request_id"/>
        </createIndex>

        <createIndex indexName="ix_cirreql_item" tableName="consignment_item_request_line">
            <column name="item_id"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>
