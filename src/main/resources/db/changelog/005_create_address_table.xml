<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet id="005_create_address_table" author="mrojek">
        <createTable tableName="address">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="line1" type="varchar(120)">
                <constraints nullable="false"/>
            </column>
            <column name="line2" type="varchar(120)"/>
            <column name="city" type="varchar(80)">
                <constraints nullable="false"/>
            </column>
            <column name="postal_code" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="country_code" type="varchar(2)">
                <constraints nullable="false"/>
            </column>
            <column name="company_name" type="varchar(160)"/>
            <column name="contact_name" type="varchar(120)"/>
            <column name="phone" type="varchar(40)"/>
            <column name="email" type="varchar(80)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>